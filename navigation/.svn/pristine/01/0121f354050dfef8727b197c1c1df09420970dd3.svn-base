<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="AppTheme.Light" parent="@android:style/Theme.Holo.Light"> 
    </style>
    <style name="concealTitle">
    	<item name="android:windowNoTitle">true</item>    
    </style> 
  
    
    <style name="XWindowTitle" >
        <item name="android:shadowColor">@color/color_titlemenu</item>
        <item name="android:shadowRadius">0</item> 
    </style>
    
    
    <style name="CustomWindowTitleBackground"> 
              <item name="android:background">@drawable/button_shadow_normal</item> 
     </style>
    <style name="test" parent="android:Theme">
        <item name="android:windowTitleSize">40dp</item>
        <item name="android:windowTitleStyle">@style/XWindowTitle</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>

</resources>
