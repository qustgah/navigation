<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#2b2c30" 
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/uesr_log"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        >
        <ImageView
            android:id="@+id/loging"
            android:src="@drawable/logo_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/loging"
            android:layout_marginLeft="12dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="@string/app_name"/>
        </RelativeLayout>
        <View
            android:background="#ff1c1c1b" 
            android:layout_width="fill_parent" 
            android:layout_height="0.5dp"/>
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <View 
                    android:background="#ff1c1c1b" 
                    android:layout_width="fill_parent" 
                    android:layout_height="0.5dp"/>
                <View 
                    android:background="#ff474745" 
                    android:layout_width="fill_parent" 
                    android:layout_height="1.0px"/>
                <RelativeLayout
                    android:id="@+id/menu_search"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/more_layout_style"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:scaleType="center"
                        android:src="@drawable/menu_search"
                        android:contentDescription="@string/app_name"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="60dp"
                        android:textColor="#ffffff"
                        android:textSize="15sp" 
                        android:text="Search"/>
                </RelativeLayout>
                <View 
                    android:background="#ff1c1c1b" 
                    android:layout_width="fill_parent" 
                    android:layout_height="1.0dp"/>
                <View 
                    android:background="#ff474745" 
                    android:layout_width="fill_parent" 
                    android:layout_height="1.0px"/>
                <RelativeLayout
                    android:id="@+id/menu_home"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/more_layout_style"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:scaleType="center"
                        android:src="@drawable/menu_home"
                        android:contentDescription="@string/app_name"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="60dp"
                        android:textColor="#ffffff"
                        android:textSize="15sp" 
                        android:text="Home"/>
                </RelativeLayout>
                <View 
                    android:background="#ff1c1c1b" 
                    android:layout_width="fill_parent" 
                    android:layout_height="1.0dp"/>
                <View 
                    android:background="#ff474745" 
                    android:layout_width="fill_parent" 
                    android:layout_height="1.0px"/>
                <RelativeLayout
                    android:id="@+id/menu_mine"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/more_layout_style"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:scaleType="center"
                        android:src="@drawable/shoucang"
                        android:contentDescription="@string/app_name"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="60dp"
                        android:textColor="#ffffff"
                        android:textSize="15sp" 
                        android:text="All|NEW UPDATE"/>
                </RelativeLayout>
                <View 
                    android:background="#ff1c1c1b" 
                    android:layout_width="fill_parent" 
                    android:layout_height="1.0dp"/>
                <View 
                    android:background="#ff474745" 
                    android:layout_width="fill_parent" 
                    android:layout_height="1.0px"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="#242529"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_gravity="center"
                        android:textColor="#66676b"
                        android:textSize="15sp"
                        android:text="WWW.IJIABAN.COM"/>
                 </LinearLayout>
                 <View 
                    android:background="#ff1c1c1b" 
                    android:layout_width="fill_parent" 
                    android:layout_height="1.0dp"/>
                <View 
                    android:background="#ff474745" 
                    android:layout_width="fill_parent" 
                    android:layout_height="1.0px"/>
               
              
            </LinearLayout>
     </ScrollView>
</LinearLayout>