<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/detailad"
    android:orientation="vertical"/>"
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/allrelative"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#F0F8FF"
                android:gravity="left" >

                <ImageView
                    android:layout_marginTop="5dp"
                    android:id="@+id/gameslogo"
                    android:scaleType="matrix"
                    android:layout_centerVertical="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp" >
                </ImageView>

                <LinearLayout
                    android:id="@+id/appinfos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/gameslogo"
                    android:orientation="vertical" >

                    <TextView
                        android:lines="2"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/appname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="#030303"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/sizetext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="left"
                            android:text="Size:" />

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="15dp"
                            android:textColor="#030303" />
                        
                        <Button
                            android:layout_marginLeft="70dp"
                            android:id="@+id/download"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape"
                            android:text="Download"
                            android:textColor="#030303" 
                            android:layout_marginBottom="5dp"/>
                           </LinearLayout>

                 
                    <!--
              <LinearLayout
                android:id="@+id/appdetailaddress"
                android:layout_width="wrap_content"  
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/appaddressname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#030303"
                    android:text="Source from:" />

                <TextView
                    android:paddingTop="5dp"
                    android:id="@+id/appaddress"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#030303"
                    android:text="" />
            </LinearLayout>
                    -->

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hdivider" />

                <HorizontalScrollView
                    android:id="@+id/hscroll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#F0F8FF"
                    android:scrollbars="none" >

                    <LinearLayout
                        android:id="@+id/game_imgs"
                        android:layout_width="fill_parent"
                        android:layout_height="300dp"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </HorizontalScrollView>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hdivider" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="#F0F8FF"
                    android:gravity="left"
                    android:singleLine="false"
                    android:text="a"
                    android:textColor="#030303" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>